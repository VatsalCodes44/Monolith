generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Player {
  publicKey     String      @id
  lamports      BigInt
  gameAsPlayer1 Game[]      @relation("Player1")
  gameAsPlayer2 Game[]      @relation("Player2")
  nfts          PlayerNft[]
}

// player 1 is always white
model Game {
  id               String     @id @default(uuid())
  player1PublicKey String
  player2PublicKey String
  fen              String
  winner           Color?
  status           GameStatus
  network          Network
  timer1           BigInt     @default(600000)
  timer2           BigInt     @default(600000)
  history          String?
  lamports         BigInt
  createdAt        DateTime   @default(now())
  player1          Player     @relation("Player1", fields: [player1PublicKey], references: [publicKey])
  player2          Player     @relation("Player2", fields: [player2PublicKey], references: [publicKey])
}

enum Network {
  MAINNET
  DEVNET
}

enum GameStatus {
  IN_PROGRESS
  DRAW
  CHECKMATE
  STALEMATE
  TIME_OUT
}

enum Color {
  w
  b
}

model PlayerNft {
  id        String   @id @default(uuid())
  publicKey String
  mintedNft String
  createdAt DateTime @default(now())
  player    Player   @relation(fields: [publicKey], references: [publicKey])
}
